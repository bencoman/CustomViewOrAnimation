<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="tileText" format="string" />
    <attr name="tileTextColor" format="color" />
    <attr name="tileTextSize" format="dimension" />

    <declare-styleable name="CustomTileView">
        <attr name="tileText" />
        <attr name="tileTextColor" />
        <attr name="tileTextSize" />
    </declare-styleable>

    <attr name="imageTileText" format="string" />
    <attr name="imageTileTextSize" format="dimension" />
    <attr name="imageTileTextColor" format="color" />
    <attr name="image" format="reference" />
    <attr name="imageScaleType" format="enum">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>

    <declare-styleable name="CustomImageView">
        <attr name="imageTileText" />
        <attr name="imageTileTextSize" />
        <attr name="imageTileTextColor" />
        <attr name="image" />
        <attr name="imageScaleType" />
    </declare-styleable>

    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="circleWidth" format="dimension" />
    <attr name="speed" format="integer" />

    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="speed" />
    </declare-styleable>

    <attr name="dotCount" format="integer" />
    <attr name="splitSize" format="integer" />
    <attr name="bg" format="reference" />

    <declare-styleable name="CustomVolumControlBar">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="circleWidth" />
        <attr name="dotCount" />
        <attr name="splitSize"/>
        <attr name="bg"/>
    </declare-styleable>

</resources>